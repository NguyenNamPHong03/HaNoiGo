# ========================================
# HANOIGO - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Client URLs (CORS)
CLIENT_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174

# ========================================
# AI SERVICES (REQUIRED FOR CHATBOT)
# ========================================

# OpenAI API - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini

# Pinecone Vector DB - Get from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=hanoigo-places
PINECONE_ENVIRONMENT=us-east-1-aws

# Cohere Reranking (optional) - Get from: https://dashboard.cohere.com/
COHERE_API_KEY=your-cohere-api-key-here

# Redis Cache (optional - leave blank to disable caching)
REDIS_URL=redis://localhost:6379
# Or Redis Cloud: redis://username:password@host:port

# Weather API (optional)
WEATHER_API_KEY=your-weather-api-key

# ========================================
# EXTERNAL SERVICES
# ========================================

# Cloudinary (image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Apify (Google Maps scraper - optional)
APIFY_TOKEN=apify_api_xxxxxxxxxxxxxx
APIFY_ACTOR_ID=compass/crawler-google-places
APIFY_DEFAULT_LOCATION=Hanoi, Vietnam
APIFY_MAX_RESULTS=20

# Foursquare API (place enrichment - optional)
FOURSQUARE_API_KEY=your-foursquare-api-key
FOURSQUARE_BASE_URL=https://api.foursquare.com/v3
