# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/hanoigo-db

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Client URLs (for CORS)
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Pinecone Configuration (for vector database)
PINECONE_API_KEY=temp-pinecone-key
PINECONE_INDEX=hanoigo-places
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379

# AI Service URL
AI_SERVICE_URL=http://localhost:8000

APIFY_TOKEN=api
APIFY_ACTOR_ID=compass/crawler-google-places
APIFY_DEFAULT_LOCATION=Hanoi, Vietnam
APIFY_MAX_RESULTS=5